<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupu"
    android:background="@color/grey">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="886dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageV3"
                android:layout_width="304dp"
                android:layout_height="235dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/loginimage1" />

            <EditText
                android:id="@+id/workername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:ems="10"
                android:hint="worker name"
                android:inputType="textPersonName"
                android:shadowColor="#75442929"
                android:textColor="#131212"
                android:textColorHighlight="#F3F5EFEF"
                android:textColorHint="#221F1F" />

            <EditText
                android:id="@+id/workeremail"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:shadowColor="#75442929"
                android:textColor="#131212"
                android:textColorHighlight="#F3F5EFEF"
                android:textColorHint="#221F1F" />

            <EditText
                android:id="@+id/workerpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:shadowColor="#75442929"
                android:textColor="#131212"
                android:textColorHighlight="#F3F5EFEF"
                android:textColorHint="#221F1F" />

            <EditText
                android:id="@+id/workerphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:layout_gravity="center"
                android:hint="Phone "
                android:inputType="phone"
                android:shadowColor="#75442929"
                android:textColor="#131212"
                android:textColorHighlight="#F3F5EFEF"
                android:textColorHint="#221F1F" />

            <EditText
                android:id="@+id/workercity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:layout_gravity="center"
                android:hint="City "
                android:inputType="textPersonName"
                android:shadowColor="#75442929"
                android:textColor="#131212"
                android:textColorHighlight="#F3F5EFEF"
                android:textColorHint="#221F1F" />
            <EditText
                android:id="@+id/salonname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:layout_gravity="center"
                android:hint="Salon name"
                android:inputType="textPersonName"
                android:shadowColor="#75442929"
                android:textColor="#131212"
                android:textColorHighlight="#F3F5EFEF"
                android:textColorHint="#221F1F" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:visibility="invisible" />

            <Button
                android:id="@+id/workersignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:text="Sign up" />

            <TextView
                android:id="@+id/workerAlready"
                android:layout_width="205dp"
                android:layout_height="34dp"
                android:text="Already have an account"
                android:layout_gravity="center"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>